@{
    ViewData["Title"] = "Edit your comment";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Editare comentariu</h2>
<br />

<form method="post" action="/Comments/Edit/@ViewBag.Comment.Id">

    <label>Comment</label>
    <br />

    <textarea name="Content">@ViewBag.Comment.Content</textarea>
    <br />

    <button class="btn  btn-primary" type="submit">Edit comment</button>

</form>
