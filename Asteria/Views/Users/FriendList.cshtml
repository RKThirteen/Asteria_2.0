@model Asteria.Models.ApplicationUser


@{
    ViewBag.Title = "Friends of" + @Model.Nickname;

}

@{
    List<ApplicationUser> F = ViewBag.F;
}

@if (TempData.ContainsKey("message"))
{
    <h2 class=@TempData["messageType"]>@TempData["message"]</h2>
}

<h2 class="text-white"> Friend List </h2>

<div class="card mt-3 bg-black" style="height:100%; width: 100%;">
    @if (F.Count > 0)
    {
        @foreach (var friend in F)
        {
            <div class="card-body d-flex justify-content-between flex-column text-white">
                <div>
                    <p style="20px"><i class="bi bi-person"> </i> Nickname: @friend.Nickname</p>
                    <p class="text-white"> Profile Picture:</p>
                    @if (Model.ProfilePic != null)
                    {
                        <img style="width:65px;height:65px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(friend.ProfilePic))">
                    }
                    <a class="btn btn-sm btn-success" href="/Users/Show/@friend.Id"> View user</a>

                    <form method="post" asp-controller="Users" asp-action="RemoveFromFriends">
                        <input type="hidden" name="senderId" value=@friend.Id>
                        <input type="hidden" name="receiverId" value=@ViewBag.UserCurent>
                        <button type="submit" class="btn btn-success">Accept</button>
                    </form>


                </div>

                <div class="d-flex flex-row justify-content-between p-3">
                    @if (ViewBag.EsteAdmin == true || ViewBag.UserCurent == Model.Id && ViewBag.AfisareButoane == true)
                    {
                        <a class="btn btn-success" href="/Users/Edit/@Model.Id">Edit profile</a>
                    }
                    @if ((string)Model.Id != ViewBag.UserCurent && ViewBag.EsteAdmin == true)
                    {


                        @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
                        {

                            <button class="btn btn-danger" type="submit">Delete user</button>

                        }
                    }
                </div>

            </div>
        }
        <a class="btn btn-success" herf="/Users/Show/@Model.Id">Back to Profile</a>
    }
    else
    {
        <div class="card-body d-flex justify-content-between bg-black">
            @if (ViewBag.UserCurent == Model.Id)
            {
                <p class="text-white">No friends in friends list!</p>
                <a class="btn btn-success" herf="/Users/Show/@Model.Id">Back to Profile</a>
            }
            else
            {
                <p class="text-white">This user has no friends added</p>
                <a class="btn btn-success" herf="/Users/Show/@Model.Id">Back to Profile</a>
            }
            
        </div>
    }
    

</div>


